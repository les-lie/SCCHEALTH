          </td>
          <td>
              Computer
              <%= select_tag "computer", options_for_select(['Yes', 'No'], params[:computer]), :include_blank => 'ALL' %>
          </td>
          <td>
              Type </br>
              <%= select_tag "type", options_for_select(['Group', 'Individual'], params[:type]), :include_blank => 'ALL' %>
          </td>
          <td>
              <%= submit_tag "Search", :name => 'search' %></p>
          </td>
