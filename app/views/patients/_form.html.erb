<div class="header_login">
<div class="container">
<div class="login_after">

<%= form_for(@patient) do |f| %>
     <%= render partial: "shared/error_messages", locals: { model: @patient  } %>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.datepicker').datepicker();
        jQuery('#timepicker').timepicker();
      });
    </script>
     <ul>
            <input name="patient[userid]" type="hidden" value="<%= current_user[:id] %>"/>
            <li>
              <%= f.label :navigator, 'Navigator' %>
              <%= f.select(:navigator_id, options_for_select(User.navigators_for_select, @patient.navigator_id )) %>
            </li>

            <li>
                <%= f.label :initial_contact %>
                <%
              if (@patient.startdate.present?)
                form_date = formatted_date(@patient.startdate) 
              else
                form_date=''
              end
              %>
                <%= text_field_tag 'patient[startdate]', form_date , "data-provide"=>"datepicker", placeholder: 'mm/dd/yyyy' %>
            </li>
            <li>
              <%= f.label :start_time %>
              <%= f.text_field :starttime, id: "timepicker" %>
            </li>

            <li>
              <%= f.label :location %>
              <%= f.select(:location, options_for_select(["Prieto", "Sengstacke", "A.C.T.S. OF F.A.I.T.H.", "Ann & Robert H. Lurie Children’s Hospital","Cook County Health and Hospitals System (CCHHS)", "Erie Family Health Center", "Family Focus", "Health Leads – Chicago", "Heartland Health Outreach", "Komed Holman Health Center"], @patient.location )) %>
            </li>
             <li>
              <%= f.label :length_of_time_with_patient, 'Length of Time With Client' %>
              <%= f.select(:timelength, options_for_select(['10 MIN', '20 MIN', '30 MIN', '40 MIN', '1 HR'], @patient.timelength )) %>
            </li>

            <li>
              <%= f.label :type_of_interaction, 'Type of Interaction' %>
              <%= f.select(:noofinteraction, options_for_select(['Individual', 'Group'], @patient.noofinteraction )) %>
            </li>

            <li>
                <%= f.label :group_id, 'Group ID' %>
                <%= f.text_field :groupid %>
            </li>
            <li>
              <%= f.label :no_of_visits, 'Number of Client Interactions' %>
              <%= f.select(:noofvisits, options_for_select(['Initial', '1-2', '3-5', '6-10','10+'], @patient.noofvisits )) %>
            </li>
            <li>
              <%= f.label :gender %>
              <%= f.select(:gender, options_for_select(['Male', 'Female','Other'], @patient.gender )) %>
            </li>
            <li>
                <%= f.label :age %>
                <%= f.select(:agerange, options_for_select(['10-15', '15-20', '20-25', '25-30', '30-35', '35-40', '40-45', '45-50', '50-60', '60-80', '80-100'], @patient.agerange )) %>
            </li>
            <li>
              <%= f.label :preferred_language %>
              <%= f.select(:languagespeaking, options_for_select(['English','Spanish','Polish', 'Vietnamese', 'French/Creole']  , @patient.languagespeaking )) %>
            </li>
            <li>
              <%= f.label :language_reading, 'Language Reading' %>
              <%= f.select(:languagereading, options_for_select(['English','Spanish','Polish', 'Vietnamese', 'French/Creole']  , @patient.languagereading )) %>
            </li>
            <li>
              <%= f.label :own_computer? %>
              <%= f.select(:computer, options_for_select(['Yes', 'No'], @patient.computer )) %>
            </li>
            <li>
              <%= f.label :Computer_Skills %>
              <%= f.select(:computerskills, options_for_select(['None', 'Beginner', 'Intermediate', 'Advanced'], @patient.computerskills )) %>
            </li>
            <li>
              <%= f.label :Navigator_notes_OR_observations %>
              <%= f.text_field :notes %>
            </li>
            <li>
              <%= f.label :topics_discussed %>
              <%= f.select(:topicdiscussed, options_for_select(['Diabetes', 'Heart Disease', 'HIV', 'Asthma', 'Stroke', 'Excercise', 'Hypertension and Nutrition'], @patient.topicdiscussed )) %>
            </li>
            <li>
              <%= link_to "Back", :back, class: "btn btn-default left" %>
              <%= f.submit "Save", class: "btn btn-primary white right" %>
            </li>
        </ul>
      <% end %>
    </div>
    
   

  </div>
</div>
