<script type="text/javascript">
      $(document).ready(function(){
        $('.datepicker').datepicker();
      });
    </script>
<h2>Search</h2>
<div class="table-responsive">
    
  <table class="records table">
       <thead>
      
        <tr>
          <td colspan='7'>
              <%= form_tag search_path, :method => 'get', :id => "patient_search" do %>
            <table>
              <tr>
                <td>
                  Select date Range
                </td>
                <td>
                  From date
                </td>
                <td>

                  <%= text_field_tag 'fromdate', params[:fromdate] , "data-provide"=>"datepicker" %>
                </td>
                <td>
                  To date
                </td>
                <td>
                  <%= text_field_tag 'todate', params[:todate] , "data-provide"=>"datepicker" %>
                </td>
              </tr>
           
        <tr>
          <td>
              Gender
              <%= select_tag "gender", options_for_select(['Male', 'Female', 'Other'], params[:gender]), :include_blank => 'ALL' %>
          </td>
          <td>
              Location
              <%= select_tag "location", options_for_select(["Prieto", "Sengstacke", "A.C.T.S. OF F.A.I.T.H.", "Ann & Robert H. Lurie Children’s Hospital","Cook County Health and Hospitals System (CCHHS)", "Erie Family Health Center", "Family Focus", "Health Leads – Chicago", "Heartland Health Outreach", "Komed Holman Health Center"], params[:location]), :include_blank => 'ALL' %>
          </td>
          <td>
              Topic
              <%= select_tag "topic", options_for_select(['Diabetes', 'Heart Disease', 'HIV', 'Asthma', 'Stroke', 'Excercise', 'Hypertension and Nutrition'], params[:topic]), :include_blank => 'ALL' %>
          </td>
          <td>
              Duration
              <%= select_tag "duration", options_for_select(['10 MIN', '20 MIN', '30 MIN', '40 MIN', '1 HR'], params[:duration]), :include_blank => 'ALL' %>
          </td>
          <td>
              Computer
              <%= select_tag "computer", options_for_select(['Yes', 'No'], params[:computer]), :include_blank => 'ALL' %>
          </td>
          <td>
              Type </br>
              <%= select_tag "type", options_for_select(['Group', 'Individual'], params[:type]), :include_blank => 'ALL' %>
          </td>
          <td>
              <%= submit_tag "Search", :name => 'search' %></p>
          </td>
        </tr>
        </table>
      <% end %>
          </td>
        </tr>
      <tr>
        <th>ID</th>
        <th>Initial Contact</th>
        <th>Age Range</th>
        <th>Gender</th>
	<th>Time Length</th>
	<th>Participants (nos)</th>
	<th>Interaction</th>
      </tr>
    </thead>
    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td><%= patient.id %></td>
          <td><%= patient.initialcontact %></td>
          <td><%= patient.agerange %></td>
          <td><%= patient.gender %></td>
	  <td><%= patient.timelength %></td>
	  <td><%= patient.noofparticipant %></td>
	  <td><%= patient.noofinteraction %></td>
              </tr>
      <% end %>
         <tr>
            <td colspan="10">
                <%= paginate @patients %>
            </td>
        </tr>
    </tbody>
  </table>
</div>	
