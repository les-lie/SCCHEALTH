<h2>Registered users</h2>
<div class="table-responsive">
  <table class="records table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>E-mail</th>
        <th>Admin</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.isadmin %></td>
          <td>
            <%= link_to 'Edit Details', edit_user_path(user), class: "btn btn-primary btn-xs white" if current_user.isadmin || current_user = user %>
          </td>
          <td><%= link_to 'Change Password', changepassword_path(user), class: "btn btn-primary btn-xs white" if current_user.isadmin || current_user = user %></td>
          <td>
            <%=
              if current_user.isadmin
                if user.status == false
                  link_to 'Activate', userstatus_path(user), method: :get, class: "btn btn-danger btn-xs white"
                else
                  link_to 'Deactivate', userstatus_path(user), method: :get,class: "btn btn-danger btn-xs white"
                end
              end
          %>
        </td>
        </tr>
      <% end %>
        <tr>
            <td colspan="7">
                <%= paginate @users %>
            </td>
        </tr>
    </tbody>
  </table>
</div>
<br>
