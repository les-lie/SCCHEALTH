<div class="header_login">
<div class="container">
<div class="header_login_box">
 
<%= form_for(@user, :url => { :action => :updatepassword, :controller =>:users }) do |f| %>
    <%= render partial: "shared/error_messages", locals: { model: @user } %>
   
    <ul>
      <li>
        <%= f.label :password %>
        <%= f.password_field :password, :autocomplete => 'off' %>
      </li>
      <li>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
      </li>  
      <li>
        <%= link_to "Back", users_path, class: "btn btn-default left" %>
        <%= f.submit "Save", class: "btn btn-primary white right"%>
      </li>
      </ul>
      <% end %>
    </div>
    
  </div>
</div>
